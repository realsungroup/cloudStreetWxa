/* pages/write-off-history/index.wxss */
.container {
  height: 100vh;
}

.content {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.select-date{
  display: flex;
  padding: 0rpx 24rpx;
  align-items: center;
}

.weui-tabs-bar__wrp {
  border-bottom: 1px solid #eee;
  margin-top: 10px;
}

.weui-tabs-swiper {
  width: 100%;
  height: 100vh;
}

.tab-content {
  overflow: scroll;
  width: 100%;
  box-sizing: border-box;
}

.weui-tabs-bar__title {
  margin: 0px 10px;
}

.tab-bar-title__selected {
  font-size: 20px;
  font-weight: bold;
}

.lz-tabs {
  flex: 1;
}

.order-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1px solid #ececec;
  margin: 0 24rpx;
}

.order-item-image {
  height: 200rpx;
  width: 200rpx;
  margin-right: 24rpx;
}

.order-info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.empty-box {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-box>image {
  height: 120rpx;
  width: 120rpx;
  margin: 24rpx 0;
}

.empty-box>text {
  font-size: 28rpx;
  color: #333333;
  font-weight: 400;
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  background: #ffffff;
  width: 260rpx;
  height: 56rpx;
  border-radius: 28rpx;
  border: 1rpx solid #ececec;
}

.picker-text {
  flex: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding-right: 12rpx;
}

.picker-down-icon {
  height: 32rpx;
  width: 32rpx;
}
.pagination{
  display: flex;
  align-items: center;
}
.pagination-btn{
  border-radius: 8rpx;
  background: #FA541C;
  color: #ffffff;
  padding: 8rpx 12rpx;
  margin: 12rpx;
}