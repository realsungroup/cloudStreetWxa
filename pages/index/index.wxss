page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.navbar {
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  flex-shrink: 0;
}

.navbar-title {
  width: 100%;
  box-sizing: border-box;
  height: 32px;
  line-height: 32px;
  position: absolute;
  left: 0;
  z-index: 10;
  color: #333;
  font-size: 16px;
  font-weight: bold;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.home-nav {
  background-color: #2B2B2B;
  padding-bottom: 6px;

}

.home-nav-business-headimg {
  height: 64rpx;
  width: 64rpx;
  border-radius: 50%;
  flex-shrink: 0;
  margin: 0 24rpx;
}

.home-nav .navbar-title {
  color: #ffffff;
  font-size: 36rpx;
  padding-right: 100px;
  display: flex;
}

.home-nav .navbar-title .navbar-title-text {
  flex-grow: 1;
  flex-shrink: 0;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  width: 150px;
}

.page-section {
  width: 100%;
}

.page-section:last-child {
  margin-bottom: 0;
}

.demo-text-1 {
  position: relative;
  align-items: center;
  justify-content: center;
  background-color: #1AAD19;
  color: #FFFFFF;
  font-size: 36rpx;
}

.demo-text-1:before {
  content: 'A';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.demo-text-2 {
  position: relative;
  align-items: center;
  justify-content: center;
  background-color: #2782D7;
  color: #FFFFFF;
  font-size: 36rpx;
}

.demo-text-2:before {
  content: 'B';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.demo-text-3 {
  position: relative;
  align-items: center;
  justify-content: center;
  background-color: #F1F1F1;
  color: #353535;
  font-size: 36rpx;
}

.demo-text-3:before {
  content: 'C';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.swiper-item {
  display: block;
  height: 150px;
  width: 100%;
}

.home-tip-container {
  position: relative;
  top: -64rpx;
  margin: 0 24rpx;
}

.lz-card {
  box-shadow: 0px 4px 10px #dcdcdc;
  border-radius: 16rpx;
  background: #ffffff;
}

.lz-card__title {
  border-bottom: 1px solid #dddddd;
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
}

.lz-card__body {
  padding: 24rpx 32rpx 32rpx 32rpx;
}

.order-status-icon--warding {
  width: 32rpx;
  height: 32rpx;
}

.order-status-text {
  flex: 1;
  font-weight: 500;
  text-align: center;
}

.order-status-text--warding {
  color: #F5222D;
}

.order-content {
  display: flex;
}

.order-content__left {
  flex: 1;
}

.order-content__right {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.order-businessname {
  color: #FA541C;
  margin-left: 8rpx;
}

.order-times {
  color: #666666;
}

.order-content__scan-code-icon {
  height: 74rpx;
  width: 74rpx;
}

.order-content__scan-code-text {
  margin-top: 20rpx;
}

.tip-order {
  position: relative;
  top: -44rpx;
  width: 702rpx;
  height: 88rpx;
  border: 1px solid #efefef;
  border-radius: 16rpx;
  margin: 0 auto;
  text-align: center;
  line-height: 88rpx;
  background-color: #FFFFFF;
  box-shadow: 0px 4px 10px #dcdcdc;
}

.tip-order-text {
  color: #FD8D3C;
}

/* 首页商品列表 */
.goods-list {
  margin: 0rpx 24rpx;
  margin-top: 24rpx;
  padding-top: 32rpx;
  border-radius: 16rpx;
  background-color: #FFFFFF;
  box-shadow: 2px 0px 10px #dcdcdc, -2px 0px 10px #dcdcdc;
}

.list-title-tag {
  position: relative;
  width: 202rpx;
  height: 56rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  background-color: #FA541C;
  padding-left: 32rpx;
  line-height: 56rpx;
  margin: 32rpx 0 8rpx 0;
}

.list-title-tag::after {
  position: absolute;
  content: '';
  right: -28rpx;
  width: 56rpx;
  height: 56rpx;
  background-color: #FFFFFF;
  transform: rotateZ(-45deg);
}

.goods-item {
  display: flex;
  padding: 24rpx 32rpx 32rpx 32rpx;
  border-bottom: 1px solid #DCDCDC;
  margin: 0 8rpx;
}

.goods-item .goods-item-image {
  width: 160rpx;
  height: 160rpx;
  background-color: #eeeeee;
  margin-right: 34rpx;
}

.goods-item__right {
  flex: 1;
}

.goods-item-price {
  color: #FA541C;
}

.goods-item .goods-item-actions {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.goods-item .goods-item-button {
  width: 200rpx;
  height: 64rpx;
  border-radius: 32rpx;
}
.order-content .order-button{
  width: 140rpx;
  height: 64rpx;
  border-radius: 32rpx;
}
.order-actions {
  display: flex;
  justify-content: space-between;
  padding: 32rpx;
}

.scan-button {
  width: 300rpx;
  height: 88rpx;
  box-sizing: border-box;
  border-radius: 44rpx;
}

.wait-button {
  width: 300rpx;
  height: 88rpx;
  box-sizing: border-box;
  border-radius: 44rpx;

}

.lz-button {
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #FA541C;
  color: #333333;
}

.lz-button--primary {
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(to left, #FA541C, #FD8D3C);
  color: #FFFFFF;
}