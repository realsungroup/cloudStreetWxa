/* pages/write-off-scan/index.wxss */
page{
  height: 100%;
}
.write-off-scan-container{
  background: #f3f3f3;
  justify-content: center;
}
.main {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin:0 24rpx;
}
.login-title{
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 32rpx;
}
.form-item{
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.form-item > label{
  width: 120rpx;
  text-align: center;
}
.form-item > input{
  flex: 1;
  border: 1rpx solid #ececec;
  height: 56rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}