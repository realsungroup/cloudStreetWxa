/* pages/ordering-select/index.wxss */
.ordering-select-container {
  height: 100vh;
  background: #f3f3f3;
}

.main {
  flex: 1;
  display: flex;
  margin-top: 24rpx;
  overflow: hidden;
}

.header {
  display: flex;
  justify-content: space-around;
  background: #FA541C;
  padding: 24rpx;
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  background: #ffffff;
  width: 260rpx;
  height: 56rpx;
  border-radius: 28rpx;
  
}

.picker-text{
  flex: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding-right: 12rpx;
}
.picker-down-icon {
  height: 32rpx;
  width: 32rpx;
}

.categories {
  width: 200rpx;
  flex-shrink: 0;
}

.foods {
  flex: 1;
  background: #ffffff;
}

.food-item {
  display: flex;
  align-items: center;
  /* height: 160rpx; */
  padding: 12rpx;
  border-bottom: 1rpx solid #ececec;
}

.food-img {
  height: 120rpx;
  width: 120rpx;
  margin-right: 24rpx;
}

.food-info {
  flex: 1;
}

.food-h1 {
  font-size: 32rpx;
}

.food-h2 {
  font-size: 28rpx;
  font-weight: 400;
  /* max-width: 240rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  /* white-space: nowrap; */
}

.food-price {
  font-size: 28rpx;
  font-weight: 400;
}

.food-right {
  display: flex;
  align-items: center;
  padding-left: 8rpx;
}

.food-item__action {
  height: 48rpx;
  width: 48rpx;
}

.food-count {
  padding: 0 8rpx;
}

.category {
  height: 56rpx;
  padding: 12rpx;
  
}
.selected.category{
  background: #ffffff;
  font-size: 36rpx;
  border-left: 8rpx solid #FA541C;
}

.footer {
  display: flex;
  height: 120rpx;
  flex-shrink: 0;
}

.order-info {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  background: #ffffff;
  color: #FA541C;
}

.next-step {
  display: flex;
  width: 200rpx;
  justify-content: center;
  align-items: center;
  background: #FA541C;
  color: #ffffff;
}