/* pages/user-info/index.wxss */
.user-info-page{
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.list{
  flex: 1;
}
.list-item{
  display: flex;
  padding: 24rpx;
  border-bottom: 1px solid #dcdcdc;
}
.list-item:first-of-type{
  border-top: 1px solid #dcdcdc;
}
.input-lable{
  width: 140rpx;
}
.lz-input{
  flex: 1;
  text-align: right;
}
.lz-picker{
  flex: 1;
}
.lz-radio-group{
  display: flex;
  flex: 1;
  justify-content: flex-end;
}
.weui-check__label {
  display: flex;
}
.weui-check__label:first-of-type{
  margin-right: 12rpx;
}
.footer{
  padding: 24rpx;
}
.lz-button--primary {
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(to left, #FA541C, #FD8D3C);
  color: #FFFFFF;
}
.save-button{
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
}