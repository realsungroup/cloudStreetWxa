/* pages/search/index.wxss */
.search-container{
  padding: 24rpx;
}
.search-section{
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.history-section{
  border-bottom: 1rpx solid #efefef;
  margin-bottom: 24rpx;
}
.search-input{
  flex: 1;
  border: 1rpx solid #ececec;
  height: 64rpx;
  border-radius: 32rpx;
  padding: 0 32rpx;
}
.search-btn{
  padding: 0 12rpx;
}
.history-section-title,.hot-section-title{
  margin-bottom: 12rpx;
}
.tag-list{
  display: flex;
  flex-wrap: wrap;
}
.lz-tag{
  border: 1rpx solid #dcdcdc;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0rpx 20rpx;
  margin-bottom: 12rpx;
  margin-right: 12rpx;
  height: 56rpx;
  border-radius: 28rpx;
  color: #999999;
  font-size: 28rpx;
}