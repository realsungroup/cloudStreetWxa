/* pages/ordering-detail/index.wxss */
.ordering-pay-container {
  height: 100vh;
  background: #f3f3f3;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  background: #FA541C;
  color: #ffffff;
}
.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  background: #ffffff;
  width: 260rpx;
  height: 56rpx;
  border-radius: 28rpx;
  border: 1rpx solid #ececec;
}

.picker-text{
  flex: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding-right: 12rpx;
}
.picker-down-icon {
  height: 32rpx;
  width: 32rpx;
}

.main {
  flex: 1;
  overflow: auto;
  padding: 12rpx 24rpx;
}

.section {
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  padding: 20rpx;
}

.section__title {
  display: flex;
  align-items: center;
}

.section__title-image {
  height: 32rpx;
  width: 32rpx;
  margin-right: 12rpx;
}

.sectioin__content {
  padding-top: 12rpx;
}

.account-info {
  display: flex;
  justify-content: space-around;
}

.account-info .account-info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
}

.account-info .account-info-item .account-info-item-icon {
  height: 48rpx;
  width: 48rpx;
}
.money-amount{
  color: #FA541C;
}
.food-item{
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ececec;
  padding: 24rpx;
}
.food-item:last-child{
  border-bottom: none;
}
.food-item > image{
  height: 120rpx;
  width: 120rpx;
}
.food-item__main{
  flex: 1;
  margin-left: 24rpx;
}
.food-item-h1{
  font-size: 32rpx;
}
.food-item-h2{
  font-size: 24rpx;
}
.food-item-price{
  font-size: 28rpx;
  color: #FA541C;
}
.footer {
  display: flex;
  height: 120rpx;
  flex-shrink: 0;
}
.order-info {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  background: #ffffff;
  color: #FA541C;
}

.next-step {
  display: flex;
  width: 200rpx;
  justify-content: center;
  align-items: center;
  background: #FA541C;
  color: #ffffff;
}