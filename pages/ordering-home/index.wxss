/* pages/ordering-home/index.wxss */
.ordering-home-container {
  height: 100vh;
  background: #f3f3f3;
}

.content {
  flex: 1;
}

.footer {
  padding: 32rpx;
}

.tab-content {
  height: 800rpx;
}

.weui-tabs-bar__item {
  width: 20%;
  font-size: 28rpx;
}

.weui-tabs-swiper {
  width: 100%;
  height: 800rpx;
}

.tab-content {
  overflow: scroll;
  width: 100%;
  box-sizing: border-box;
  background: #ffffff;
  padding: 32rpx 0;
}

.weui-tabs-bar__title {
  margin: 0px 10px;
}

.tab-bar-title__selected {
  font-size: 32rpx;
  font-weight: bold;
}

.lz-tabs {
  flex: 1;
}

.content-item {
  display: flex;
  padding: 24rpx;
  align-items: center;
}

.content-item >image {
  height: 120rpx;
  width: 120rpx;
}
.content-name{
  flex: 1;
  padding-left: 48rpx;
}
.content-action{
  color: #FA541C;
}
.content-right{
 
}
.content-right-btn{
  width: 140rpx;
  height: 40rpx;
  background: #FA541C;
  color: #ffffff;
  border-radius: 12rpx;
  text-align: center;
  line-height: 40rpx;
  margin-top: 32rpx;
  padding: 8rpx 0;
}